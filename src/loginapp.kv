<LoginScreen>:
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            pos_hint: {"top": 1.0}

            MDTopAppBar:
                id: toolbar
                title: ""
                md_bg_color: "#29acb6"
                type: "top"
                type_height: "small"

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(8)
            spacing: dp(25)
            adaptive_height: True
            pos_hint: {"center_x": 0.5, "top": 0.75}

            MDTextField:
                id: username
                hint_text: ""
                font_size: "20sp"
                icon_right: "account"
                size_hint_x: 0.9
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: password
                hint_text: ""
                font_size: "20sp"
                icon_right: "lock"
                password: True
                size_hint_x: 0.9
                pos_hint: {"center_x": 0.5}

            MDRectangleFlatButton:
                id: but_login
                text: ""
                font_size: "20sp"
                size_hint_x: 0.5
                pos_hint: {"center_x": 0.5}
                on_release: root.validate_login()

            MDTextButton:
                id: link_create_account
                text: ""
                theme_text_color: "Custom"
                text_color: 0.15, 0.33, 0.96, 1  # similar to #2754F5
                pos_hint: {"center_x": 0.5}
                on_release: root.go_to_signup_page()

            MDLabel:
                id: message
                text: ""
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 0, 0, 1  # red for error
                markup: True
