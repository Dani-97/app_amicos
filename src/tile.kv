<Tile>:
    id: tile_content
    size_hint: None, None
    size: dp(200), dp(200)
    radius: [15]
    padding: dp(10)
    ripple_behavior: True  # Enable ripple on click

    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]

    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Color:
            rgba: 0.4, 0.4, 0.4, 1

    AsyncImage:
        id: tile_image
        size_hint: 1.0, 0.8
    
    MDLabel:
        id: tile_label
        text: ""
        halign: 'center'
        size_hint: 1.0, 0.2
        text_color: 1, 1, 1, 1
        font_size: sp(16)
