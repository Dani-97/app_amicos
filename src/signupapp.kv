<SignupScreen>:
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(50)
            spacing: dp(25)
            adaptive_height: True
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                text: "Crear Cuenta"
                halign: "center"
                font_style: "H4"
                theme_text_color: "Primary"

            MDTextField:
                id: username
                hint_text: "Nombre de usuario"
                font_size: "20sp"
                icon_right: "account"
                size_hint_x: 0.6
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: role
                hint_text: "Rol"
                font_size: "20sp"
                icon_right: "account-badge"
                size_hint_x: 0.6
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: email
                hint_text: "Email"
                font_size: "20sp"
                icon_right: "email"
                size_hint_x: 0.6
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: password
                hint_text: "Contraseña"
                font_size: "20sp"
                icon_right: "lock"
                password: True
                size_hint_x: 0.6
                pos_hint: {"center_x": 0.5}

            MDRectangleFlatButton:
                text: "Crear cuenta"
                font_size: "20sp"
                size_hint_x: 0.4
                pos_hint: {"center_x": 0.5}
                on_release: root.execute_signup()

            MDTextButton:
                text: "¿Ya tienes cuenta? Iniciar sesión"
                theme_text_color: "Custom"
                text_color: 0.15, 0.33, 0.96, 1  # similar to #2754F5
                pos_hint: {"center_x": 0.5}
                on_release: root.go_to_login_page()

            MDLabel:
                id: message
                text: ""
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 0, 0, 1  # red for errors
                markup: True
