<SignupScreen>:
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            pos_hint: {"top": 1.0}

            MDTopAppBar:
                id: toolbar
                title: ""
                md_bg_color: "#29acb6"
                type: "top"
                type_height: "small"

        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            padding: (8, 8)

            MDTextField:
                id: username
                hint_text: ""
                font_size: "20sp"
                icon_right: "account"
                size_hint_x: 0.90
                padding: (18, 18)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: role
                hint_text: ""
                font_size: "20sp"
                icon_right: "account-badge"
                size_hint_x: 0.90
                padding: (18, 18)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: email
                hint_text: ""
                font_size: "20sp"
                icon_right: "email"
                size_hint_x: 0.90
                padding: (18, 18)
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: password
                hint_text: ""
                font_size: "20sp"
                icon_right: "lock"
                password: True
                size_hint_x: 0.90
                padding: (18, 18)
                pos_hint: {"center_x": 0.5}

            MDRectangleFlatButton:
                id: but_create_account
                text: ""
                font_size: "20sp"
                size_hint_x: 0.5
                pos_hint: {"center_x": 0.5}
                on_release: root.execute_signup()

            MDTextButton:
                id: link_to_login
                text: ""
                theme_text_color: "Custom"
                text_color: 0.15, 0.33, 0.96, 1  # similar to #2754F5
                pos_hint: {"center_x": 0.5}
                padding: 32, 32
                on_release: root.go_to_login_page()

            MDLabel:
                id: message
                text: ""
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 0, 0, 1  # red for errors
                markup: True
